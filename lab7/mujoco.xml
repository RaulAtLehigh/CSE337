<mujoco model="stacked_objects">
  <!-- Set up simulation options, including gravity -->
  <option gravity="0 0 -9.81" timestep="0.01" />

  <!-- Define assets, like materials or textures (optional for this simple case) -->
  <asset>
    <material name="red" rgba="1 0 0 1" />
    <material name="green" rgba="0 1 0 1" />
    <material name="blue" rgba="0 0 1 1" />
    <material name="floor" rgba="0.9 0.9 0.9 1" />
  </asset>

  <worldbody>
    <!-- Add a light source for better visualization
    <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/> -->

    <!-- A plane to act as the ground -->
    <geom name="floor" type="plane" size="2 2 0.1" material="floor" />

    <!--
      The objects are defined within 'body' elements to make them dynamic.
      Each has a 'free' joint, allowing it to move and rotate freely.
      The positions are set so they are stacked vertically, just touching.
    -->

    <!-- Body 1: The bottom cube -->
    <body name="bottom_cube" pos="0 0 0.05">
      <joint name="bottom_cube_joint" type="free"/>
      <geom name="bottom_cube_geom" type="box" size="0.05 0.05 0.05" material="red" />
    </body>

    <!-- Body 2: The middle sphere -->
    <body name="middle_sphere" pos="0 0 0.15">
      <joint name="middle_sphere_joint" type="free"/>
      <geom name="middle_sphere_geom" type="sphere" size="0.05" material="green" />
    </body>

    <!-- Body 3: The top cube -->
    <body name="top_cube" pos="0 0 0.25">
      <joint name="top_cube_joint" type="free"/>
      <geom name="top_cube_geom" type="box" size="0.05 0.05 0.05" material="blue" />
    </body>

  </worldbody>
</mujoco>